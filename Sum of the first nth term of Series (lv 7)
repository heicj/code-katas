level 7

def series_sum(n):
    # Happy Coding ^_^
    if n == 1:
        return '1.00'
    elif n == 2:
        return '1.25'
    else:
        answer = 1
        for i in range(0, n):
            answer += 1/(4 + (n * 3))
          
            
    rounded = round(answer, 2)
    return str(rounded)
